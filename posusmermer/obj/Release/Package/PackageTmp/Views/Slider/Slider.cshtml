@model IEnumerable<EntityLayer.Concrete.Slider>

<div class="swiper mySwiper mt-2">
    <div class="swiper-wrapper">
        @foreach (var item in Model)
        {
        <div class="swiper-slide">
            <h3 style="position: absolute; color: white; bottom: 70px;">@item.Description1</h3>
            <h5 style="position: absolute; color: white; bottom: 50px;">@item.Description2</h5>
            <img src="@item.Image1" alt="">
        </div>
        }
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>
<style>

    .swiper {
        width: 50%;
        height: 50%;
    }

    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }

        .swiper-slide img {
            display: block;
            width: 100%;
            Max-height: 700px;
            object-fit: cover;
        }


    .sidebar-inner ul li a {
        text-decoration: none;
    }

    .sidebar-inner ul {
        list-style: none;
    }


    .mySwiper {
        height: 20%;
        width: 100%;
        box-sizing: border-box;
        padding: 10px 0;
    }
</style>

