@model EntityLayer.Concrete.Project
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Güncelle</h2>

@using (Html.BeginForm("UpdateProject", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<form class="form-group" method="post">
    @Html.HiddenFor(x => x.ProjectID)
    <p>Başlık</p>
    @Html.Label("Proje Başlığı")
    @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 1")
    @Html.TextAreaFor(x => x.About1, 20, 10, new { @class = "form-control" })
    <br />
    @Html.Label("Detay")

    @Html.TextAreaFor(x => x.About2, 20, 10, new { @class = "form-control" })
    <br />
    @Html.Label("Konum")
    @Html.TextBoxFor(x => x.Map, new { @class = "form-control" })
    <br /> 
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">KAYDET</button>
</form>}