@model EntityLayer.Concrete.Product
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Ürün Ekle</h2>

@using (Html.BeginForm("AddNewProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("Ürün Başlığı")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.values, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 1")
    @Html.TextAreaFor(x => x.Description, 20, 10, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 2")
    @Html.TextAreaFor(x => x.Description, 20, 10, new { @class = "form-control" })
    <br />
    @Html.Label("Renk")
    @Html.TextBoxFor(x => x.Renk, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanım Alanı")
    @Html.TextBoxFor(x => x.KullanımAlanı, new { @class = "form-control" })
    <br />
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">KAYDET</button>
}