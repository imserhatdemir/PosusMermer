@model IEnumerable<EntityLayer.Concrete.Slider>
@{
    ViewBag.Title = "SliderList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>SliderList</h2>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a href="/Slider/AddSlider" class="btn btn-primary">Slider Ekle</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SliderID</td>
                            <td>@item.Description1</td>
                            <td>@item.Description2</td>
                            <td><img src="@item.Image1" width="100" height="100" class="img-responsive"></img></td>
                            <td>
                                <a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-danger" id="btn1">SİL</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
