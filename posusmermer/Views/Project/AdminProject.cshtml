@model IEnumerable<EntityLayer.Concrete.Project>
@{
    ViewBag.Title = "AdminProject";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>AdminProject</h2>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a href="/Project/AddNewProject" class="btn btn-primary">PROJE EKLE</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProjectID</td>
                            <td>@item.ProjectName</td>
                            <td><img src="@item.Image" width="100" height="100" class="img-responsive"></img></td>

                            <td>
                                <a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger" id="btn1">SİL</a>
                                <a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">GÜNCELLE</a>
                                <a href="/Project/ProjectID/@item.ProjectID" class="btn btn-info">DETAY</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>