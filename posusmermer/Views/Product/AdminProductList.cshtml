@model IEnumerable<EntityLayer.Concrete.Product>
@{
    ViewBag.Title = "AdminProductList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Ürün Listesi</h2>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a href="/Product/AddNewProduct" class="btn btn-primary">ÜRÜN EKLE</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.Title</td>
                        <td><img src="@item.Image" width="100" height="100" class="img-responsive"></img></td>
                        <td>@item.Category.CategoryName</td>
                        <td>
                            <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger" id="btn1">SİL</a>
                            <a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">GÜNCELLE</a>
                            <a href="/Product/ProductDetails/@item.ProductID" class="btn btn-info">DETAY</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

