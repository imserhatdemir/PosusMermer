@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a href="/Blog/AddNewBlog" class="btn btn-primary">BLOG EKLE</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.Title</td>
            <td><img src="@item.Image" width="100" height="100" class="img-responsive"></img></td>
            <td>
                <a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger" id="btn1">SİL</a>
                <a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-success">GÜNCELLE</a>
                <a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-info">DETAY</a>
            </td>
        </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>

