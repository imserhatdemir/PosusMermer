@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="sidebar sticky-sidebar col-lg-3">
    <!--widget newsletter-->
    <!--end: widget newsletter-->
    <!--Tabs with Posts-->
    <div class="widget">
        <div class="tabs">
            <ul class="nav nav-tabs" id="tabs-posts" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#popular" role="tab" aria-controls="popular" aria-selected="true">Son Bloglar</a>
                </li>
            </ul>
            @foreach (var item in Model)
            {
            <div class="tab-content" id="tabs-posts-content">
                <div class="tab-pane fade show active" id="popular" role="tabpanel" aria-labelledby="popular-tab">
                    <div class="post-thumbnail-list">
                        <div class="post-thumbnail-entry">
                            <img alt="" src="@item.Image">
                            <div class="post-thumbnail-content">
                                <a href="~/Blog/BlogDetails/@item.BlogID">@item.Title</a>
                                <span class="post-date"><i class="far fa-clock"></i> 6m ago</span>
                                <span class="post-category">.</span>
                            </div>
                        </div>
                    </div>
                </div>
             
            </div>}
        </div>
    </div>
    <!--End: Tabs with Posts-->
    <!--widget tags -->
    <!--end: widget tags -->


</div>
<!-- end: Sidebar-->

