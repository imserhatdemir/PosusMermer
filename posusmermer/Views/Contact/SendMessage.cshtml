
@{
    ViewBag.Title = "SendMessage";
    Layout = "~/Views/Shared/_Header.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<section id="page-title" data-parallax-image="~/posus/images/5458400.jpg">
    <div class="container">
        <div class="page-title">
            <h1>Hoşgeldiniz!</h1>
        </div>
    </div>
</section>
<!-- end: Page title -->
<!-- CONTENT -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3 class="text-uppercase">Bizimle İletişime Geçin</h3>
                <p>Soru, görüş ve önerileriniz için bizimle iletişime geçebilirsiniz.</p>
                <div class="m-t-30">
                    <form class="widget-contact-form" method="post">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">Ad</label>
                                <input type="text" aria-required="true" id="#Name" name="ContactName" class="form-control required name" placeholder="Enter your Name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="email" aria-required="true" id="#Mail" name="ContactMail" class="form-control required email" placeholder="Enter your Email">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label for="subject">Konu</label>
                                <input type="text" name="Title" class="form-control required" placeholder="Subject...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="message">Mesaj</label>
                            <textarea name="Message" cols="30" rows="7" class="form-control" placeholder="Write your notes or questions here..."></textarea>
                        </div>


                        <div class="row form-group">
                            <div class="col-md-12">
                                <button class="btn btn-dark text-light" type="submit" id="btn" >Mesaj Gönder</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <img src="~/posus/images/Logo_Mockup_058.png" width="100%" />
                </div>

                <!-- Google map sensor -->
                <div class="flicker-img">
                    <iframe src="" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <!-- Google map sensor -->

            </div>
        </div>
    </div>

</section>

@Html.Action("Footer", "About")



