@model IEnumerable<EntityLayer.Concrete.Contact>
@{
    ViewBag.Title = "AdminMessage";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>AdminMessage</h2>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>AD</th>
                        <th>MAİL</th>
                        <th>KONU</th>
                        <th>MESAJ</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>AD</th>
                        <th>MAİL</th>
                        <th>KONU</th>
                        <th>MESAJ</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ContactID</td>
                            <td>@item.ContactName</td>
                            <td>@item.ContactMail</td>
                            <td>@item.Title</td>
                            <td>@item.Message</td>
                            <td>
                                <a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger" id="btn1">SİL</a>
                                <a href="/Contact/MessagdeDetails/@item.ContactID" class="btn btn-success">DETAY</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

