
@model IEnumerable<EntityLayer.Concrete.Plates>
@{
    ViewBag.Title = "AdminPlakaList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>AdminPlakaList</h2>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a href="/Plak/AddNewPlak" class="btn btn-primary">PLAKA EKLE</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PlatesID</td>
                            <td>@item.PlatesName</td>
                            <td><img src="@item.Image" width="100" height="100" class="img-responsive"></img></td>
                            
                            <td>
                                <a href="/Plak/DeletePlak/@item.PlatesID" class="btn btn-danger" id="btn1">SİL</a>
                                <a href="/Plak/UpdatePlak/@item.PlatesID" class="btn btn-success">GÜNCELLE</a>
                                <a href="/Plak/PlakDetail/@item.PlatesID" class="btn btn-info">DETAY</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

